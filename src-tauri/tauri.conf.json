{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Better Notepad",
  "version": "1.0.0",
  "identifier": "com.pyrus.better-notepad",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Better Notepad",
        "backgroundColor": "#111111",
        "width": 800,
        "height": 600,
        "decorations": false,
        "visible": false,
        "center": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico"
    ],
    "fileAssociations": [
        {
          "ext": ["txt", "md", "log", "ini", "json", "bat", "cfg", "js", "html", "htm", "css", "vbs", "reg", "xml"],
          "name": "Better Notepad",
          "rank": "Alternate"
        }
    ]
  },
  "plugins": {
    "singleInstance": {
      "enabled": true
    }
  }
}
